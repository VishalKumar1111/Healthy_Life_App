<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">
   <com.google.android.material.card.MaterialCardView
       android:layout_height="wrap_content"
       android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_analysis"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/analysis"/>

        <TextView
            android:id="@+id/text_analysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="30sp"
            android:text="Analysis"
            android:textAppearance="?attr/textAppearanceHeadline6" />
        <ImageView
            android:id="@+id/img_meditation"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/meditation"/>

        <TextView
            android:id="@+id/text_meditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="30sp"
            android:text="Meditation"
            android:textAppearance="?attr/textAppearanceHeadline6" />
        <ImageView
            android:id="@+id/img_quiz"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/quiz"/>

        <TextView
            android:id="@+id/text_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="30sp"
            android:text="Chill Zone"
            android:textAppearance="?attr/textAppearanceHeadline6" />
        <ImageView
            android:id="@+id/img_health"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/health"/>

        <TextView
            android:id="@+id/text_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="30sp"
            android:text="Health care"
            android:textAppearance="?attr/textAppearanceHeadline6" />
         <ImageView
            android:id="@+id/img_yoga"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/yoga"/>

        <TextView
            android:id="@+id/text_yoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="30sp"
            android:text="Yoga"
            android:textAppearance="?attr/textAppearanceHeadline6" />

    </LinearLayout>
   </com.google.android.material.card.MaterialCardView>
</ScrollView>