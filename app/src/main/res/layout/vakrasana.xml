<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background001">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vakrasana Or Twisted Pose"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:background="#B39DDB"/>

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/vakrasana"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vakrasana"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:background="#FFF59D"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/detail_vakrasana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click here for more detail"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#370740"
            android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>