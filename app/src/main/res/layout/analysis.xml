<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background001">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Analysis"
                android:textStyle="bold"
                android:textSize="40sp"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_maleria"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/malaria"
                android:layout_margin="10dp"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/img_dengue"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                app:srcCompat="@drawable/dengu" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:background="@color/white"
                    android:id="@+id/img_typhoid"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/typhoid" />

                <ImageView
                    android:background="@color/white"
                    android:id="@+id/img_flu"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/flu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:background="@color/white"
                        android:id="@+id/img_covid"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/covid" />

                    <ImageView
                        android:background="@color/white"
                        android:id="@+id/img_tb"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/tuberculosis" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:background="@color/white"
                        android:id="@+id/img_cancer"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/cancer" />

                    <ImageView
                        android:background="@color/white"
                        android:id="@+id/img_pneumonia"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/pneumonia" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>